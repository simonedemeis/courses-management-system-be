{
  "name": "server",
  "type": "module",
  "scripts": {
    "start:erase": "node --watch --env-file=.env src/index.ts",
    "start:compile": "node --watch --env-file=.env --experimental-transform-types src/index.ts",
    "database:seed": "node --env-file=.env src/drizzle/seeder.ts",
    "database:clear": "node --env-file=.env src/drizzle/reset.ts",
    "database:reset": "node --env-file=.env src/drizzle/reset.ts && npm run database:seed",
    "database:studio": "drizzle-kit studio",
    "database:create-migration": "drizzle-kit generate",
    "database:migrate": "drizzle-kit migrate",

    "start:erase@22": "node --watch --experimental-strip-types --env-file=.env src/index.ts",
    "start:compile@22": "node --watch --env-file=.env --experimental-transform-types src/index.ts",
    "database:seed@22": "node --env-file=.env --experimental-transform-types src/drizzle/seeder.ts",
    "database:clear@22": "node --env-file=.env --experimental-transform-types src/drizzle/reset.ts",
    "database:reset@22": "node --env-file=.env --experimental-transform-types src/drizzle/reset.ts && npm run database:seed@22"
  },
  "dependencies": {
    "@libsql/client": "^0.15.6",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.43.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.31.1"
  }
}
